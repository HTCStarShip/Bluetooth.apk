<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:headerbar="http://schemas.android.com/apk/res/com.htc">
    <RelativeLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <com.htc.widget.HeaderBarMiddle android:id="@id/header" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <com.htc.widget.HeaderBarText android:id="@id/title_intro" android:layout_width="fill_parent" android:layout_height="fill_parent" headerbar:panel_gravity="center_panel" />
        </com.htc.widget.HeaderBarMiddle>
        <LinearLayout android:background="@com.htc:drawable/listview_listbackground" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_below="@id/header">
            <com.htc.widget.HtcListView android:id="@id/list" android:layout_width="fill_parent" android:layout_height="fill_parent" />
            <ViewStub android:id="@id/empty" android:layout="@layout/no_transfers" android:layout_width="fill_parent" android:layout_height="fill_parent" />
        </LinearLayout>
    </RelativeLayout>
</merge>